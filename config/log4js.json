{
  "appenders": {
    "console": {
      "type": "stdout"
    },
    "errorFile": {
      "type": "file",
      "filename": "log/errors.log"
    },
    "errors": {
      "type": "logLevelFilter",
      "level": "ERROR",
      "appender": "errorFile"
    }
  },
  "categories": {
    "default": { "appenders": ["console", "errors"], "level": "TRACE" }
  }
}
